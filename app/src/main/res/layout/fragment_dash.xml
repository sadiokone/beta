<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <GridLayout
            android:id="@+id/mainGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:layout_marginStart="10dp"
            android:columnOrderPreserved="false"
            android:rowCount="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="150dp"
            android:layout_marginTop="60dp"
            >

            <!-- ROW 1  -->
            <!-- COLUMN 1  -->
            <androidx.cardview.widget.CardView
                android:id="@+id/CardViewLot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:elevation="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:layout_margin="@dimen/dashboard_cardView_margin"
                >

                <LinearLayout
                    android:id="@+id/CardViewL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dashboard_img"
                        android:layout_height="@dimen/dashboard_img"
                        android:src="@drawable/animal_con"
                        android:contentDescription="@string/lotanimal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:text="@string/lot"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/dashboard_texte_view_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/AnimalEnreg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:elevation="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dashboard_cardView_margin"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dashboard_img"
                        android:layout_height="@dimen/dashboard_img"
                        android:src="@drawable/animal_con"
                        android:contentDescription="@string/enr"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:text="@string/enregistrer"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/dashboard_texte_view_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/CardViewafficher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:elevation="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:layout_margin="@dimen/dashboard_cardView_margin"
                >

                <LinearLayout
                    android:id="@+id/affiches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dashboard_img"
                        android:layout_height="@dimen/dashboard_img"
                        android:src="@drawable/animal_con" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:text="afficher "
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/dashboard_texte_view_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- COLUMN 2  -->

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:elevation="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dashboard_cardView_margin"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dashboard_img"
                        android:layout_height="@dimen/dashboard_img"
                        android:src="@drawable/animal_con" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:text="InsÃ©mination"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/dashboard_texte_view_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ROW 3  -->
            <!-- COLUMN 1  -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:elevation="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dashboard_cardView_margin"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dashboard_img"
                        android:layout_height="@dimen/dashboard_img"
                        android:src="@drawable/animal_con" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:text="lot"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/dashboard_texte_view_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- COLUMN 2  -->

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:elevation="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dashboard_cardView_margin"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dashboard_img"
                        android:layout_height="@dimen/dashboard_img"
                        android:src="@drawable/animal_con" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:text="inseminal"
                        android:textAlignment="center"
                        android:textColor="#000"

                        android:textSize="@dimen/dashboard_texte_view_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

















        </GridLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_margin_left_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_margin_right_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_margin_top_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.10" />

















    </RelativeLayout>




</ScrollView>